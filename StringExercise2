package A33;

public class StringExerciseQ2 {
	    public static int countOccurrences(String main, String sub) {
	        int count = 0;
	        int index = 0;
	        while ((index = main.indexOf(sub, index)) != -1) {
	            count++;
	            index += sub.length();
	        }
	        return count;
	    }
	    public static void main(String[] args) {
	        String mainText = "AIET is AIET and AIET is the best!";
	        String search = "AIET";

	        int result = countOccurrences(mainText, search);
	        System.out.println("Occurrences of '" + search + "': " + result); // 3
	    }
	}


